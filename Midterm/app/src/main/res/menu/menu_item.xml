<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <group android:id="@+id/groupSearch"
        android:checkableBehavior="none">
        <item android:title="Search"
            android:icon="@drawable/baseline_search_24"
            app:showAsAction="always"
            android:id="@+id/iSearch"/>
    </group>

    <group android:id="@+id/groupSort"
        android:checkableBehavior="single">
        <item android:title="Sort"
            android:icon="@drawable/baseline_sort_24"
            app:showAsAction="always"
            android:id="@+id/iSort">
            <menu>
                <item android:title="Sort by Alphabet"
                    android:id="@+id/iSortNameAscending" />
                <item android:title="Sort by ID Ascending"
                    android:id="@+id/iSortIDAscending" />
                <item android:title="Sort by ID Descending"
                    android:id="@+id/iSortIDDescending" />
            </menu>
        </item>
    </group>

    <item android:title="Add"
        android:icon="@drawable/baseline_add_24"
        app:showAsAction="always"
        android:id="@+id/iAdd"/>
    <item android:title="Select All"
        android:id="@+id/iCheckAll"
        app:showAsAction="never" />
    <item android:title="Unselect All"
        android:id="@+id/iUncheckAll"
        app:showAsAction="never"/>
    <item android:title="Delete"
        android:id="@+id/iDelete"/>
</menu>
